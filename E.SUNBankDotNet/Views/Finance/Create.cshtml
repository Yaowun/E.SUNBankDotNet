@model LikeProductViewModel

<h2 class="text-center my-4">新增喜好商品</h2>

<div class="container">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        
        <div class="form-group">
            <label asp-for="ProductName" class="form-label">產品名稱</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Price" class="form-label">價格</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="FeeRate" class="form-label">手續費率</label>
            <input asp-for="FeeRate" class="form-control" />
            <span asp-validation-for="FeeRate" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="OrderQuantity" class="form-label">數量</label>
            <input asp-for="OrderQuantity" class="form-control" />
            <span asp-validation-for="OrderQuantity" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Account" class="form-label">扣款帳號</label>
            <input asp-for="Account" class="form-control" />
            <span asp-validation-for="Account" class="text-danger"></span>
        </div>
        
        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">新增</button>
            <a asp-action="Index" class="btn btn-secondary">取消</a>
        </div>
    </form>
</div>
